<script>
let files = [];

dropZone.onclick = () => fileInput.click();
dropZone.ondragover = e => { e.preventDefault(); dropZone.style.borderColor="#d9232e"; }
dropZone.ondragleave = () => dropZone.style.borderColor="#ccc";
dropZone.ondrop = e => {
  e.preventDefault();
  dropZone.style.borderColor="#ccc";
  handleFiles(e.dataTransfer.files);
};

fileInput.onchange = () => handleFiles(fileInput.files);

function handleFiles(selectedFiles) {
  files = [...selectedFiles];
  renderFileList();
}

function renderFileList() {
  const list = document.getElementById("fileList");
  list.innerHTML = "";

  files.forEach((f, i) => {
    const div = document.createElement("div");
    div.className = "file-item";
    div.textContent = `${i+1}. ${f.name}`;
    list.appendChild(div);
  });
}

function applyRename() {
  if (!files.length) return alert("Upload files first!");

  const prefix = document.getElementById("prefix").value;
  const suffix = document.getElementById("suffix").value;
  const replaceFrom = document.getElementById("replaceFrom").value;
  const replaceTo = document.getElementById("replaceTo").value;
  let num = parseInt(document.getElementById("startNum").value) || 1;

  files = files.map(f => {
    const ext = f.name.split('.').pop();
    let name = f.name.replace("." + ext, "");

    if (replaceFrom) name = name.replaceAll(replaceFrom, replaceTo);
    if (prefix) name = prefix + name;
    if (suffix) name = name + suffix;

    const numbered = name + "_" + String(num).padStart(3, "0") + "." + ext;
    num++;

    return new File([f], numbered, { type: f.type });
  });

  renderFileList();
  document.getElementById("downloadAll").style.display = "inline-block";

  alert("Preview updated!");
}

function downloadRenamed() {
  files.forEach(f => {
    const a = document.createElement("a");
    a.href = URL.createObjectURL(f);
    a.download = f.name;
    a.click();
  });
}
</script>

